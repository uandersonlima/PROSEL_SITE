@{
Layout = null;
}
@inject IUserService userSvc
@{
var users = await userSvc.GetByPermission(AccessType.User);
    List<string> contatos = users.Select(user => user.Telephone).ToList();
    List<string> emails = users.Select(user => user.Email).ToList();
}
        <!DOCTYPE html>
        <html lang="en">

        <head>
