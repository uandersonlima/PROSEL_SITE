@model Message
@{
    Layout="_Layout_3";  
    ViewBag.Title = "Mensagem " + @Model.Messagecode;
}
<style>
i.fas{
    position: relative;
    z-index: 0;
}
i.fas:after{
    content: '';
    height: 0px;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%, -50%);
    background-color: #fff159;
    width: 0px;
    border-radius: 100%;
    z-index: -1;
    transition: all .3s;
}
i.fas:hover{
    color:rgba(0,0,0,1) !important;
}
i.fas:hover::after{
width: 70px;
height: 70px;
}
</style>
<div class="container pt-3 mt-3">
    <a asp-action="Trash" class="nav-link py-0 mb-3"><i class="fas fa-arrow-left fa-4x text-warning font-weight-bold align-middle"></i></a> 
    <div class="card bg-warning">
        <div class="card-body text-dark px-5 pt-5">
        <h2 class="text-left font-weight-bold"><span class="fa fa-user"></span> Remetente:</h2>
        <h2 class="text-left font-weight-bold ml-5">@Model.Sender</h2>
        <h2 class="text-left font-weight-bold"><span class="fa fa-envelope"></span> Email:</h2>
        <h2 class="text-left font-weight-bold ml-5">@Model.Email</h2>
        <h2 class="text-left font-weight-bold"><span class="fas fa-paper-plane"></span> Mensagem:</h2>
        <h1 class="text-justify font-weight-bold mx-5">@Model.Description</h1>
        <h5 class="text-right font-weight-bold" >@Model.TimeReceived.ToString("ddd, dd.MM HH:mm") <span class="fa fa-check" data-toggle="tooltip" data-placement="bottom" title="Horário recebido"></span></h5>
        <h5 class="text-right font-weight-bold" >@Model.ViewedTime?.ToString("ddd, dd.MM HH:mm") <span class="fa fa-check-double" data-toggle="tooltip" data-placement="bottom" title="Horário de visualização"></span></h5>
        </div>
    </div>
</div>