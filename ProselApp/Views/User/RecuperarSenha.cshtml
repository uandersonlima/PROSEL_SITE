@model User
@{
    ViewData["Title"] = "Recuperação de conta";
    Layout = "_Layout_2";
}
<div class="container-fluid text-center">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="card col-12 col-md-6 col-lg-4 elegant-color-dark">
            <div class="card-body">
                <form method="post">
                    <a class="logo" asp-area="" asp-controller="User" asp-action="Index">
                        <img class="d-block mx-auto mb-4" src="~/assets/img/logo-prin.png" alt="" width="150">
                    </a>
                    <h4 class="mb-3 yellow-text text-uppercase font-weight-bold">Digite o e-mail para recuperação.</h4>
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="form-row">
                                <div class="col">
                                    <div class="md-form text-left">
                                        <i class="fas fa-envelope prefix yellow-text"></i>
                                        <input asp-for="Email" id="email" class="form-control yellow-text" type="email">
                                        <label for="email" class="font-weight-light yellow-text">Seu email</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-5">
                        <div class="col-md-6 mt-4 mt-md-0 col-12 order-1 order-md-0 ml-auto align-self-center">
                            <a asp-action="Login" asp-controller="User" class="font-weight-bold yellow-text">Anterior</a>
                        </div>
                        <div class="col-md-6 col-12 ml-auto">
                            <button type="submit" class="btn btn-lg btn-warning font-weight-bold btn-block text-capitalize text-dark"> Próximo </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
